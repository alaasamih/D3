@using Sitecore.Feature.PageContent
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@model Sitecore.Mvc.Presentation.RenderingModel
@using Sitecore.Data.Items;
<h1 class="visually-hidden">Co-working space</h1>
@foreach (Item item in Model.Item.Children)
{
  <div class="row common-page-row">
    <div class="col-md-6">
      <h2>@Html.Sitecore().Field(Templates.HasPageContent.Fields.Title, item)</h2>
      <p>
        @Html.Sitecore().Field(Templates.HasPageContent.Fields.Summary, item)
      </p>
    </div>
    <div class="col-md-6">
      @Html.Sitecore().Field(Templates.HasImage.Fields.Image, item, new { w = 542, h = 273 })
    </div>
  </div>
}
