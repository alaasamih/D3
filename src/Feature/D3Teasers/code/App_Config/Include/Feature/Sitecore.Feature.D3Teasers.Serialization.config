<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <unicorn>
      <configurations>
        <configuration name="Feature.D3Teasers" description="D3Teasers content" dependencies="Foundation.Serialization" patch:after="configuration[@name='Foundation.Serialization']">
          <targetDataStore physicalRootPath="$(sitecore.demo.D3.sourceFolder)\Feature\D3Teasers\serialization" type="Rainbow.Storage.SerializationFileSystemDataStore, Rainbow" useDataCache="false" singleInstance="true" />
          <predicate type="Unicorn.Predicates.SerializationPresetPredicate, Unicorn" singleInstance="true">
            <include name="Sitecore.Feature.Events.Templates" database="master" path="/sitecore/templates/Feature/D3Teasers" />
            <include name="Sitecore.Feature.Events.Renderings" database="master" path="/sitecore/layout/renderings/Feature/D3Teasers" />
          </predicate>
          <syncConfiguration type="Unicorn.Loader.DefaultSyncConfiguration, Unicorn" singleInstance="true" updateLinkDatabase="false" updateSearchIndex="true" maxConcurrency="1" />
        </configuration>

      </configurations>
    </unicorn>
  </sitecore>
</configuration>