@using Sitecore.Feature.Nightlife
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Data.Items
@model Sitecore.Mvc.Presentation.RenderingModel

<head>
  <title>
    Dubai Design District | Nightlife d3
  </title>
</head>
<div class="col-md-12 col-centered">
  <h1>@Html.Sitecore().Field(Templates.HasContent.Fields.Title, Model.Item)</h1>
  @Html.Sitecore().Field(Templates.HasContent.Fields.Summary, Model.Item)
  <p>&nbsp;</p>
</div>

<div class="row">
  <div class="col-xs-12">
    <div class="row">
      <div class="col-md-12 col-centered">
        <h2>@Html.Sitecore().Field(Templates.HasContent.Fields.RestTitle, Model.Item)</h2>
      </div>
    </div>
  </div>
</div>
<div class="row common-page-row">
  @foreach (Item item in Model.Item.Children)
  {

    <div class="col-sm-4" "col-xs-12" ="">
      <h3>@item[Templates.HasRestaurant.Fields.Name]</h3>
      <p><a href="tel:@item[Templates.HasRestaurant.Fields.Phone]">@item[Templates.HasRestaurant.Fields.Phone]</a></p>
      <a href="@item.LinkFieldUrl(Templates.HasRestaurant.Fields.Link)" target="_blank">
        @Html.Sitecore().Field(Templates.HasRestaurant.Fields.Image,item, new { w = 348, h = 232 })
      </a>
    </div>
  }
</div>